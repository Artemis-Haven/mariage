{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger" role="alert">
        <i class="fas fa-exclamation-triangle"></i> &nbsp;
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
    <br/>
{% endif %}

<h3 class="text-center">Connectez-vous</h3>
<br>
<form accept-charset="UTF-8" role="form" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <fieldset>
        <div class="form-group">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Prénom et nom" />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Mot de passe" />
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                {{ 'security.login.remember_me'|trans }}
            </label>
        </div>
        <input class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </fieldset>
</form>

<br/>
<h4 class="text-center">OU</h4>
<br>
<a href="{{ path("fos_user_registration_register") }}" class="btn btn-lg btn-secondary btn-block">Créez un compte</a>

<div class="text-right">
    <a class="small" href="{{ path("fos_user_resetting_request") }}">J'ai oublié mon mot de passe</a>
</div>